<div class="container mt-4">
  <div class="d-flex justify-content-center">
    <div class="row">
      <h1>Stupid Coaching</h1>
      <div class="d-flex mb-4 mt-4" style="height: 100px;">
        <div class="vr"></div>
        <div>
          <p class="ms-2">Q: <%= @question %></p>
          <small class="ms-2">YOU</small>
        </div>
      </div>
      <div class="d-flex mt-4" style="height: 100px;">
        <div class="vr"></div>
        <div>
          <p class="ms-2">A: <%= @answer %></p>
          <small class="ms-2">COACH</small>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to 'back', ask_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<style>
  .btn {
    width: 100px;
    margin-top: 2rem;
  }

  small {
    color: #6c757d;
  }
</style>